<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mazinger.ishoddy.activities.PasswordForgottenActivity">

    <include layout="@layout/toolbar_layout"/>


    <TextView
        android:id="@+id/activity_password_forgotten__textview_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/activity_password_forgotten__textmail_marginEnd"
        android:layout_marginLeft="@dimen/activity_password_forgotten__textmail_marginLeft"
        android:layout_marginRight="@dimen/activity_password_forgotten__textmail_marginRigh"
        android:layout_marginStart="@dimen/activity_password_forgotten__textmail_margin_start"
        android:layout_marginTop="@dimen/activity_password_forgotten__textmail_margin_top"
        android:text="@string/activity_password_forgotten__textmail_insertmail_text"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"/>

    <EditText
        android:id="@+id/activity_password__forgotten_textedit_email"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/activity_password_forgotten__texts_magins"
        android:layout_marginLeft="@dimen/activity_password_forgotten__texts_magins"
        android:layout_marginRight="@dimen/activity_password_forgotten__texts_magins"
        android:layout_marginStart="@dimen/activity_password_forgotten__texts_magins"
        android:layout_marginTop="28dp"
        android:inputType="textEmailAddress"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_password_forgotten__textview_email" />

    <Button
        android:id="@+id/activity_password__button_accept"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/activity_password_forgotten__texts_magins"
        android:layout_marginLeft="@dimen/activity_password_forgotten__texts_magins"
        android:layout_marginRight="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="22dp"
        android:text="Aceptar"
        app:layout_constraintHorizontal_bias="0.409"
        app:layout_constraintRight_toRightOf="@+id/activity_password__forgotten_textedit_email"
        app:layout_constraintTop_toBottomOf="@+id/activity_password__forgotten_textedit_email"
        app:layout_constraintLeft_toRightOf="@+id/activity_password__button_cancel" />

    <Button
        android:id="@+id/activity_password__button_cancel"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        app:layout_constraintBottom_toBottomOf="@+id/activity_password__button_accept"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="@dimen/activity_password_forgotten__texts_magins"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_password__forgotten_textedit_email"/>


</android.support.constraint.ConstraintLayout>
