<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mazinger.ishoddy.activities.CategoriesListActivity">

    <include layout="@layout/toolbar_layout"/>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/activity_list_categories_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ru.dimorinny.floatingtextbutton.FloatingTextButton
            android:id="@+id/activity_list_categories_request_service"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start|bottom"
            android:layout_marginBottom="@dimen/floating_text_button_margin_bottom"
            android:layout_marginStart="8dp"
            app:floating_background_color="@color/darkPurple"
            app:floating_title="@string/request_service_button_text"
            app:floating_title_color="@android:color/white"/>

        <ru.dimorinny.floatingtextbutton.FloatingTextButton
            android:id="@+id/activity_list_categories_offer_service"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="@dimen/floating_text_button_margin_bottom"
            app:floating_background_color="@color/darkPurple"
            app:floating_title="@string/offer_service_button_text"
            app:floating_title_color="@android:color/white"/>

    </android.support.design.widget.CoordinatorLayout>

</LinearLayout>
